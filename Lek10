#include <iostream>

using namespace std;

int main() {
    int i, j, k;

    int value = 2;

    double A[2][2] = { {4,2},
    {7,32} };

    double C[2] = { 10,17 };


    cout << "After normalization: " << endl;
    for (int i = 0; i < 2; i++)
    {
        for (int j = 0; j < 2; j++)
        {
            cout << A[i][j] << "  ";
        } cout << endl;
    }

    for (int k = 0; k < 2; k++)
    {
        //нормализиране на к-тия ред.
        int DEL = A[k][k];
        for (int j = 0; j < 2; j++)
        {
            A[k][j] = (A[k][j] / DEL);
        }
        C[k] = C[k] / DEL;

        for (int i = k + 1; i < 2; i++)
        {
            for (int j = k; j < 2; j++)
            {
                A[i][j] = A[i][j] - A[k][j] * A[i][k];
            }
            C[i] = C[i] - C[k] * A[i][k];
        }
    }

    cout << "Matrix A:" << endl;
    for (int i = 0; i < 2; i++)
    {
        for (int j = 0; j < 2; j++)
        {
            cout << A[i][j] << "  ";
        } cout << endl;
    }

    cout << C[1];
    return 0;
}
